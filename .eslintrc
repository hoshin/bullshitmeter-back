rules:
 array-bracket-spacing: [ 2, always ]
 comma-dangle: [ 2, only-multiline ]
 curly: [ 2, all ]
 eol-last: 2
 indent: [ 2, 4 ]
 keyword-spacing: 2
 linebreak-style: [ 2, unix ]
 no-console: 1
 no-irregular-whitespace: 2
 no-trailing-spaces: 2
 quotes: [ 2, single ]
 semi: [ 2, always ]
 space-before-blocks: 2

parserOptions:
 sourceType: module

env:
 node: true
 browser: true
 commonjs: true
 es6: true

globals:
 beforeEach: true
 afterEach: true
 it: true
 describe: true

extends: 'eslint:recommended'
